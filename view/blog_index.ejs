<% include header %>

<% for (let post of postList) {
	let firstPPosition = post.html.indexOf('</p>'),
		date = post._id.getTimestamp(); -%>

	<article lang="<%- post.lang %>">

	<h1><a href="/blog/<%- post._id.toString().substr(0, 8) %>"><%- post.title %></a></h1>
	<time datetime="<%- date.toISOString() %>" pubdate><%- date.toDateString() %></time>
	<% if(firstPPosition === -1) { -%>
		<%- post.html %>
	<% } else { -%>
		<%- post.html.substr(0, firstPPosition + 4) %>
	<% } -%>

	</article>
<% } -%>

<% include footer %>
