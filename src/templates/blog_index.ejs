<%- include('header', {
	canonical,
	title: locals.tag ? `tag "${tag}"` : undefined,
}); -%>

<% if (locals.tag !== undefined) { -%>
	<h1>Posts tagged "<%= tag %>"</h1>
<% } -%>

<% for (let post of postList) { -%>

	<a href="/blog/<%- post.id %>/<%- post.formatedTitle %>">
		<article lang="<%- post.lang %>">

		<time datetime="<%- post.date.toISOString() %>"><%- post.date.toDateString() %></time>
		<h1><%- post.title %></h1>
		<%- post.excerpt %>

		</article>
	</a>
<% } -%>


<%- include('blog_license'); -%>
<%- include('footer'); -%>
